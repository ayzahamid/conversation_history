<div class="min-h-screen flex items-center justify-center">
  <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
    <h2 class="text-2xl font-bold text-center text-indigo-600">Login to Homey</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mt-4">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, required: true, class: "w-full px-4 py-2 border rounded-lg focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div class="mt-4">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, required: true, class: "w-full px-4 py-2 border rounded-lg focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div class="mt-4 flex justify-between items-center">
        <%= f.check_box :remember_me, class: "text-indigo-600" %>
        <%= f.label :remember_me, class: "text-sm text-gray-600" %>
        <a href="<%= new_user_password_path %>" class="text-sm text-indigo-600 hover:underline">Forgot Password?</a>
      </div>

      <div class="mt-6">
        <%= f.submit "Login", class: "w-full bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700" %>
      </div>
    <% end %>

    <div class="mt-4 text-center">
      <p class="text-sm text-gray-600">Don't have an account?
        <a href="<%= new_user_registration_path %>" class="text-indigo-600 hover:underline">Sign up</a>
      </p>
    </div>
  </div>
</div>

<turbo-stream action="prepend" target="comments-list">
  <template>
    <%= render partial: "comments/comment", formats: :html, locals: { comment: @comment } %>
  </template>
</turbo-stream>

<turbo-stream action="replace" target="comment-form">
  <template>
    <%= form_with model: [@project, Comment.new], data: { turbo_stream: true }, id: "comment-form" do |f| %>
      <%= f.text_area :content, class: "w-full p-2 border rounded-lg", placeholder: "Add a comment..." %>
      <%= f.submit "Post Comment", class: "mt-2 px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-700" %>
    <% end %>
  </template>
</turbo-stream>

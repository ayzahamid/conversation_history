<div class="container mc-auto px-6 py-12 mt-20">
  <h1 class="font-bold">Project</h1>

  <%= link_to "New Project", new_project_path, class: "my-4 px-4 py-2 bg-green-500 text-white rounded-lg hover:bg-green-700 inline-block" %>

  <table class="min-w-full border-collapse border border-gray-300 overflow-x-auto bg-white shadow-md rounded-lg">
    <thead>
      <tr class="bg-gray-100"></tr>
        <th class="border border-gray-300 px-6 py-3 text-left text-gray-700">Name</th>
        <th class="border border-gray-300 px-6 py-3 text-left text-gray-700">Description</th>
        <th class="border border-gray-300 px-6 py-3 text-left text-gray-700">Code</th>
        <th class="border border-gray-300 px-6 py-3 text-left text-gray-700">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @project.each do |project| %>
        <tr class="border border-gray-300 hover:bg-gray-50" id="<%= dom_id(project) %>">
          <td class="border border-gray-300 px-6 py-3"><%= project.name %></td>
          <td class="border border-gray-300 px-6 py-3"><%= project.description %></td>
          <td class="border border-gray-300 px-6 py-3"><%= project.code %></td>
          <td class="border border-gray-300 px-6 py-3">
            <%= link_to "View", project_path(project), class: "px-3 py-1 bg-gray-500 text-white rounded" %>
            <%= link_to "Edit", edit_project_path(project), class: "px-3 py-1 bg-yellow-500 text-white rounded hover:bg-yellow-600" %>
            <%= link_to "Delete", project,
                data: { turbo_method: "delete", turbo_confirm: "Are you sure you want to delete?" },
                class: "px-3 py-1 bg-red-500 text-white rounded hover:bg-red-600" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
